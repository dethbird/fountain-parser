{
  "name": "dethbird/slim-skeleton",
  "description": "Ultra-light Slim 4 skeleton for serving public assets and a tiny API",
  "type": "project",
  "require": {
    "php": ">=8.3",
    "slim/slim": "^4.13",
    "slim/psr7": "^1.7",
    "vlucas/phpdotenv": "^5.6",
    "twig/twig": "^3.0",
    "slim/twig-view": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S 0.0.0.0:8080 -t public public/index.php",
    "test": "phpunit"
  }
}
