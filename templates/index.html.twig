{% extends "layout.html.twig" %}

{% block title %}Fountain Parser - Home{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-body">
            <div class="container">
                <h1 class="title is-1">
                    <i class="fas fa-fountain-pen"></i>
                    Fountain Parser
                </h1>
                <h2 class="subtitle is-4">
                    Parse and process fountain screenplay format
                </h2>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column">
                    <!-- Navigation/Info Card -->
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                <i class="fas fa-info-circle"></i>
                                &nbsp;API Information
                            </p>
                        </header>
                        <div class="card-content">
                            <div class="content">
                                <p>Available endpoints:</p>
                                <ul>
                                    <li><strong>Health Check:</strong> <code>/api/health</code></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- React App Root -->
            <div class="main-content">
                <div class="box">
                    <h3 class="title is-4">Application</h3>
                    <div id="root">
                        <!-- React app will mount here -->
                        <div class="notification is-info">
                            <i class="fas fa-spinner fa-spin"></i>
                            Loading React application...
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="content has-text-centered">
            <p>
                <strong>Fountain Parser</strong> - A screenplay parsing application.
            </p>
        </div>
    </footer>
{% endblock %}

{% block scripts %}
    <!-- Load React App Bundle -->
    <script type="module">
        // Check if built assets exist
        const checkAssets = async () => {
            try {
                // Try to load the built React app from the correct manifest location
                const response = await fetch('/assets/.vite/manifest.json');
                if (response.ok) {
                    const manifest = await response.json();
                    console.log('Manifest loaded:', manifest);
                    
                    // Load the main entry point
                    const mainEntry = manifest['src/main.jsx'];
                    if (mainEntry && mainEntry.file) {
                        console.log('Loading main JS file:', mainEntry.file);
                        
                        const script = document.createElement('script');
                        script.type = 'module';
                        script.src = '/assets/' + mainEntry.file;
                        script.onload = () => console.log('React script loaded successfully');
                        script.onerror = (e) => {
                            console.error('Failed to load React script:', e);
                            throw new Error('Script loading failed');
                        };
                        document.head.appendChild(script);
                        
                        // Load CSS if it exists
                        if (mainEntry.css && mainEntry.css.length > 0) {
                            mainEntry.css.forEach(cssFile => {
                                console.log('Loading CSS file:', cssFile);
                                const link = document.createElement('link');
                                link.rel = 'stylesheet';
                                link.href = '/assets/' + cssFile;
                                link.onload = () => console.log('CSS loaded:', cssFile);
                                link.onerror = (e) => console.error('Failed to load CSS:', cssFile, e);
                                document.head.appendChild(link);
                            });
                        }
                    } else {
                        throw new Error('No main entry found in manifest');
                    }
                } else {
                    throw new Error(`Manifest not found: ${response.status} ${response.statusText}`);
                }
            } catch (error) {
                console.error('React app loading failed:', error);
                // Show development message
                document.getElementById('root').innerHTML = `
                    <div class="notification is-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>React app failed to load</strong>
                        <br><br>
                        <strong>Error:</strong> ${error.message}
                        <br><br>
                        <strong>Troubleshooting:</strong>
                        <br>1. Check browser console for detailed errors
                        <br>2. Verify files exist in <code>/assets/</code> directory
                        <br>3. Try rebuilding: <code>cd frontend && npm run build</code>
                        <br>4. Check Apache MIME types for .js files
                        <br><br>
                        <strong>For development:</strong>
                        <br>Run <code>npm run dev</code> in the frontend directory
                    </div>
                `;
            }
        };
        
        checkAssets();
    </script>
{% endblock %}