{% extends "layout.html.twig" %}

{% block title %}Fountain Writer - Home{% endblock %}

{% block content %}
    <!-- Header -->
    <section class="section pt-4 pb-2">
        <div class="container">
            <h1 class="title is-3">
                <img src="/img/title.png" class="title-image" />
            </h1>
            <p class="subtitle is-6">A screenplay editor for the .fountain.ext markup language.</p>
        </div>
    </section>

    <!-- Main Content -->
    <section class="section pt-2 pb-2">
        <div class="container is-fluid">
            <!-- React App Root -->
            <div class="main-content">
                <div class="box">
                    <div id="root">
                        <!-- React app will mount here -->
                        <div class="notification is-info">
                            <i class="fas fa-spinner fa-spin"></i>
                            Loading React application...
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="content has-text-centered">
            <p>
                <strong>&copy 2025 Fountain Writer</strong>
            </p>
        </div>
    </footer>
{% endblock %}

{% block scripts %}
    <!-- Load React App Bundle -->
    <script type="module">
        // Check if built assets exist
        const checkAssets = async () => {
            try {
                // Try to load the built React app from the correct manifest location
                const response = await fetch('/assets/.vite/manifest.json');
                if (response.ok) {
                    const manifest = await response.json();
                    // Load the main entry point
                    const script = document.createElement('script');
                    script.type = 'module';
                    script.src = '/assets/' + manifest['src/main.jsx'].file;
                    document.head.appendChild(script);
                    
                    // Load CSS if it exists
                    if (manifest['src/main.jsx'].css) {
                        manifest['src/main.jsx'].css.forEach(cssFile => {
                            const link = document.createElement('link');
                            link.rel = 'stylesheet';
                            link.href = '/assets/' + cssFile;
                            document.head.appendChild(link);
                        });
                    }
                } else {
                    throw new Error('Manifest not found at /assets/.vite/manifest.json');
                }
            } catch (error) {
                console.warn('React app not built yet:', error.message);
                // Show development message
                document.getElementById('root').innerHTML = `
                    <div class="notification is-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        React app not built yet. 
                        <br><br>
                        <strong>To build the React app:</strong>
                        <br>1. <code>cd frontend</code>
                        <br>2. <code>npm install</code>
                        <br>3. <code>npm run build</code>
                        <br><br>
                        <strong>For development:</strong>
                        <br>Run <code>npm run dev</code> in the frontend directory
                        <br><br>
                        <small>Error: ${error.message}</small>
                    </div>
                `;
            }
        };
        
        checkAssets();
    </script>
{% endblock %}