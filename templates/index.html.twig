{% extends "layout.html.twig" %}

{% block title %}Fountain Parser - Home{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-body">
            <div class="container">
                <h1 class="title is-1">
                    <i class="fas fa-fountain-pen"></i>
                    Fountain Parser
                </h1>
                <h2 class="subtitle is-4">
                    Parse and process fountain screenplay format
                </h2>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column">
                    <!-- Navigation/Info Card -->
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                <i class="fas fa-info-circle"></i>
                                &nbsp;API Information
                            </p>
                        </header>
                        <div class="card-content">
                            <div class="content">
                                <p>Available endpoints:</p>
                                <ul>
                                    <li><strong>Health Check:</strong> <code>/api/health</code></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- React App Root -->
            <div class="main-content">
                <div class="box">
                    <h3 class="title is-4">Application</h3>
                    <div id="root">
                        <!-- React app will mount here -->
                        <div class="notification is-info">
                            <i class="fas fa-spinner fa-spin"></i>
                            Loading React application...
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="content has-text-centered">
            <p>
                <strong>Fountain Parser</strong> - A screenplay parsing application.
            </p>
        </div>
    </footer>
{% endblock %}

{% block scripts %}
    <!-- Load React App Bundle -->
    <!-- In development, you'll run `npm run build` in the frontend directory first -->
    <!-- The manifest.json will contain the actual filenames with hashes -->
    <script type="module">
        // Check if built assets exist
        const checkAssets = async () => {
            try {
                // Try to load the built React app
                // You'll need to update these paths after building
                const response = await fetch('/assets/manifest.json');
                if (response.ok) {
                    const manifest = await response.json();
                    // Load the main entry point
                    const script = document.createElement('script');
                    script.type = 'module';
                    script.src = '/assets/' + manifest['src/main.jsx'].file;
                    document.head.appendChild(script);
                } else {
                    throw new Error('No built assets found');
                }
            } catch (error) {
                console.warn('React app not built yet. Run `npm run build` in frontend directory.');
                // Show development message
                document.getElementById('root').innerHTML = `
                    <div class="notification is-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        React app not built yet. 
                        <br><br>
                        <strong>To build the React app:</strong>
                        <br>1. <code>cd frontend</code>
                        <br>2. <code>npm install</code>
                        <br>3. <code>npm run build</code>
                        <br><br>
                        <strong>For development:</strong>
                        <br>Run <code>npm run dev</code> in the frontend directory
                    </div>
                `;
            }
        };
        
        checkAssets();
    </script>
{% endblock %}